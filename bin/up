 #!/bin/sh

if which dnf > /dev/null; then
	sudo dnf upgrade
	sudo dnf remove --oldinstallonly
	sudo dnf autoremove
	exit
fi

if which snap > /dev/null; then
	sudo snap refresh
fi

if which flatpak > /dev/null; then
	sudo flatpak update
	sudo flatpak uninstall --unused --delete-data
fi

if [ "$1" != "1" ]; then
	sudo apt update
fi

sudo apt full-upgrade
sudo apt autoremove
sudo apt clean
